{
  "publisher": "zwave-js",
  "name": "config-editor",
  "displayName": "Z-Wave JS Config Editor",
  "description": "Editor support for authoring Z-Wave JS device configuration files",
  "version": "0.0.15",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:jsonc"
  ],
  "contributes": {
    "commands": [
      {
        "command": "configEditor.open",
        "title": "Open Z-Wave JS Config Editor",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "configEditor.hasConfigDocument",
          "command": "configEditor.open",
          "group": "navigation"
        }
      ]
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "build": "NODE_ENV=production node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint .",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/vscode": "^1.74.0",
    "@types/vscode-webview": "^1.57.1",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/webview-ui-toolkit": "^1.2.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^8.0.3",
    "jsonc-parser": "^3.2.0",
    "mocha": "^10.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "alcalzone-shared": "^4.0.8",
    "vscode-json-languageservice": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zwave-js/vscode-config-editor"
  }
}
